<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music App - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="dashboard-container">
        <header class="dashboard-header">
            <h1>Music Voting Dashboard</h1>
            <div class="user-info">
                Welcome, <strong><%= user.username %></strong>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </header>

        <nav class="dashboard-nav">
            <a href="/dashboard" class="nav-link active">Dashboard</a>
            <a href="/music-list" class="nav-link">Music List</a>
            <a href="/add-music" class="nav-link">Add Music</a>
            <a href="/vote" class="nav-link">Vote</a>
        </nav>

        <main class="dashboard-content">
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Songs</h3>
                    <p class="stat-number"><%= music.length %></p>
                </div>
                <div class="stat-card">
                    <h3>Total Votes</h3>
                    <p class="stat-number">
                        <%= music.reduce((total, song) => total + song.votes, 0) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h3>Your Account</h3>
                    <p class="stat-number"><%= user.username %></p>
                </div>
            </div>

            <div class="recent-music">
                <h2>Recent Music</h2>
                <% if (music.length > 0) { %>
                    <div class="music-grid">
                        <% music.slice(0, 4).forEach(function(song) { %>
                            <div class="music-card">
                                <h4><%= song.title %></h4>
                                <p><strong>Artist:</strong> <%= song.artist %></p>
                                <p><strong>Votes:</strong> <%= song.votes %></p>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p>No music added yet. <a href="/add-music">Add some music!</a></p>
                <% } %>
            </div>

            <div class="quick-actions">
                <h2>Quick Actions</h2>
                <div class="action-buttons">
                    <a href="/add-music" class="btn-primary">Add New Music</a>
                    <a href="/vote" class="btn-secondary">Vote on Songs</a>
                    <a href="/music-list" class="btn-secondary">View All Music</a>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
